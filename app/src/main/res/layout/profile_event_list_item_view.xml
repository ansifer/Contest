<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:orientation="vertical"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/top_section_list_item_view"
            android:layout_margin="8dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_of_creator_list_item_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_color"
                android:text="Sanchit Varshney"
                android:textStyle="bold"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/action_on_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_horiz_black_24dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <View
            android:id="@+id/dividerfirst"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/top_section_list_item_view"
            android:background="@color/activity_background" />

        <ImageView
            android:layout_below="@id/dividerfirst"
            android:id="@+id/event_cover"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Event Cover" />


        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/event_cover"
            android:background="@color/activity_background" />

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/list_view_detail_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_below="@id/divider">

            <TextView
                android:id="@+id/event_name_list_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_color"
                android:layout_marginRight="4dp"
                android:textSize="18sp"
                android:layout_weight="3"
                android:layout_gravity="center_horizontal"
                tools:text="Namsnbabcdajhbjkbakjbdkjbajsbdbajdbkbasjkbajksbdjbasjbsjabjkade" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:id="@+id/event_time_list_text_view"
                android:textColor="@color/secondary_text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_weight="2"
                tools:text="11:22" />


        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>